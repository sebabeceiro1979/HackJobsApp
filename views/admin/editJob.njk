{% extends "master.njk" %}
{% block main %}
  <div class="container mt-4 narrow">
    <div class="card mb-3">
      <div class="card-header p-3 bg-transparent d-flex justify-content-between align-items-center">
        <h1 class="fs-4 mb-0">Editar oferta laboral</h1>
      </div>
      <div class="card-body">
        <form action="/admin/ofertas/editar/{{ job.id }}" method="post">
          <div class="mb-3">
            <label for="title" class="form-label">Título</label>
            <input id="title" name="title" class="form-control" type="text" placeholder="Ingresar título..." value="{{ job.title }}">
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Descripción</label>
            <textarea id="description" name="description" class="form-control" placeholder="Ingresar descripción...">{{ job.description }}</textarea>
          </div>

          <div class="mb-3">
            <label for="company" class="form-label">Empresa</label>
            <input id="company" name="company" class="form-control" placeholder="Ingresar empresa..." value="{{ job.company }}"/>
          </div>

          <div class="mb-3">
            <label for="city" class="form-label">Ciudad</label>
            <input id="city" name="city" class="form-control" placeholder="Ingresar ciudad..." value="{{ job.city }}"/>
          </div>

          <div class="mb-3">
            <label for="applyEmail" class="form-label">Email para aplicar</label>
            <input id="applyEmail" name="applyEmail" class="form-control" placeholder="Ingresar correo electrónico..." value="{{ job.applyEmail }}"/>
          </div>

          <div class="mb-4">
            <label for="image" class="form-label">Imagen</label>
            <input class="form-control" type="file" id="image" name="image">
          </div>

          <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" value="true" id="featured" name="featured" {% if job.featured %} checked="checked" {% endif %}/>
            <label class="form-check-label" for="featured">
              Oferta destacada
            </label>
          </div>
          <button type="submit" class="btn btn-success px-4">Editar</button>
        </form>
      </div>
    </div>

    <div class=" my-4"></div>

  </div>

{% endblock %}
