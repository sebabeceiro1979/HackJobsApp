{% extends "master.njk" %}
{% block main %}
  <div class="container mt-4">
    <div class="card mb-3">
      <div class="card-header p-3 bg-transparent d-flex justify-content-between align-items-center">
        <h1 class="fs-4 mb-0">Admin - Usuarios</h1>
        <a href="/admin/usuarios/crear" class="btn btn-success btn-sm">Nuevo</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
              {% for u in users %}
                <tr>
                  <th scope="row">{{ u.id }}</th>
                  <td>
                    {{ u.firstname }}
                    {{ u.lastname }}
                  </td>
                  <td>{{ u.email }}</td>
                  <td>
                    <a href="/admin/usuarios/editar/{{ u.id }}" class="btn btn-primary btn-sm">
                      <i class="fas fa-edit"></i>
                    </a>
                    {% if (u.email !== user.email) %}
                      <a href="/admin/usuarios/eliminar/{{ u.id }}" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>
                      </a>
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}

            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class=" my-4"></div>

  </div>

{% endblock %}