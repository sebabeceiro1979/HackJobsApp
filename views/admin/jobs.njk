{% extends "master.njk" %}
{% block main %}
  <div class="container mt-4">
    <div class="card mb-3">
      <div class="card-header p-3 bg-transparent d-flex justify-content-between align-items-center">
        <h1 class="fs-4 mb-0">Admin - Ofertas laborales</h1>
        <a href="/admin/ofertas/crear" class="btn btn-success btn-sm">Nuevo</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">TÃ­tulo</th>
                <th scope="col">Destacada</th>
                <th scope="col">Creado</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
              {% for job in jobs %}
                <tr>
                  <th scope="row">{{ job.id }}</th>
                  <td>{{ job.title }}</td>
                  <td>
                    {% if job.featured %}
                      <i class="far fa-check-circle text-success"></i>
                    {% else %}
                      <i class="far fa-times-circle text-danger"></i>
                    {% endif %}
                  </td>
                  <td>{{ dateFormat(job.createdAt, "yyyy-MM-dd") }}</td>
                  <td>
                    <a href="/admin/ofertas/editar/{{ job.id }}" class="btn btn-primary btn-sm">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="/admin/ofertas/eliminar/{{ job.id }}" class="btn btn-danger btn-sm">
                      <i class="fas fa-trash-alt"></i>
                    </a>
                  </td>
                </tr>
              {% endfor %}

            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class=" my-4"></div>

  </div>

{% endblock %}