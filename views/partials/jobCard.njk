<div class="job bg-white rounded-3 shadow-sm p-4 mb-4 position-relative">
  <h4 class="mb-3">
    <a class="stretched-link text-decoration-none text-reset" href="/trabajos/{{ job.slug }}">{{ job.title }}</a>
  </h4>
  <ul class="fa-ul">
    <li>
      <span class="fa-li">
        <i class="far fa-file-alt"></i>
      </span>
      {{ job.description | truncate(200) }}
      <a class="text-decoration-none" href="/trabajos/{{ job.slug }}" ">Ver m√°s &rarr;</a>
    </li>
    <li>
      <span class="fa-li">
        <i class="fas fa-map-marker-alt"></i>
      </span>
      Ciudad:
      {{ job.city }}
    </li>
    <li>
      <span class="fa-li">
        <i class="fas fa-building"></i>
      </span>
      Empresa:
      {{ job.company }}
    </li>
  </ul>
</div>